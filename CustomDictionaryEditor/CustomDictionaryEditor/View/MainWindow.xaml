<Window x:Class="CustomDictionaryEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button 
            Grid.Row="0"
            Margin="5"
            Content="Edit Word List">
        </Button>
        <Button
            Grid.Row="1"
            Margin="5"
            Content="Change Default">
        </Button>
        <Button
            Grid.Row="2"
            Margin="5"
            Content="New">
        </Button>
        <Button
            Grid.Row="3"
            Margin="5"
            Content="Add">
        </Button>
        <Button
            Grid.Row="4"
            Margin="5"
            Content="Remove">
        </Button>
    </Grid>
</Window>
